{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "",
    "globals": {
        "ion": true,
        "trans": true,
        "axios": true,
        "PropTypes": true,
        "Echo": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },

    "rules": {
        "no-tabs": 0,
        "max-len": 0,
        "prefer-destructuring": ["error", {"object": true, "array": false}],
        "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [ "Link" ],
            "specialLink": [ "hrefLeft", "hrefRight", "to" ],
            "aspects": [ "noHref", "invalidHref", "preferButton" ]
        }],
        "no-selfAssigned" : 0,
        "no-underscore-dangle": 0,
        "space-unary-ops": 0,
        "spaced-comment": 0,
        "strict": 0,
        "template-curly-spacing": 0,
        "valid-jsdoc": 0,
        "linebreak-style": 0,
        "no-console" : "off",
        "import/order": 0,
        "consistent-return": 0,
        "func-names": 0,
        "no-cond-assign": 1,
        "no-constant-condition": 1,
        "no-multi-spaces": 0,
        "no-trailing-spaces": 2,
        "space-before-blocks": 1,
        "semi": [2, "always"]

    },
    "plugins": [
        "security",
        "import",
        "jsx-a11y"
    ]
}